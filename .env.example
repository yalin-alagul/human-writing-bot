# Typing Speed Configuration
# All delays are in seconds

# Minimum delay between characters (lower = faster typing)
MIN_KEYSTROKE_DELAY=0.05

# Maximum delay between characters (lower = faster typing)
MAX_KEYSTROKE_DELAY=0.15

# Probability of taking a longer pause (0.0 to 1.0)
# 0.1 means 10% chance of pause after each character
PAUSE_CHANCE=0.1

# Minimum duration for thinking pauses
PAUSE_MIN=0.3

# Maximum duration for thinking pauses
PAUSE_MAX=0.8

# Extra delay after word boundaries (spaces, punctuation)
WORD_BOUNDARY_DELAY=0.1

# Suggested presets (uncomment and adjust as needed):
# Fast typing:
# MIN_KEYSTROKE_DELAY=0.03
# MAX_KEYSTROKE_DELAY=0.08

# Medium typing (default):
# MIN_KEYSTROKE_DELAY=0.05
# MAX_KEYSTROKE_DELAY=0.15

# Slow typing:
# MIN_KEYSTROKE_DELAY=0.1
# MAX_KEYSTROKE_DELAY=0.25
